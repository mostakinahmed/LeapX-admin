<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/stylesheets/style.css"></script>
    <style>
        @keyframes floatUp {
            0% {
                transform: translateY(12px);
                opacity: 0;
            }

            50% {
                transform: translateY(-6px);
                opacity: 1;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .anim-float {
            animation: floatUp 1.2s cubic-bezier(.2, .9, .3, 1) both;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.98);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .fade-in {
            animation: fadeIn 1.2s ease-out both;
        }
    </style>
    <style>
        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-70px);
                /* increased distance */
            }
        }

        .animate-float {
            animation: float 1.2s ease-in-out infinite;
            /* faster animation */
        }
    </style>

</head>

<body class="bg-gray-900 flex items-center justify-center min-h-screen p-6">

    <!-- Toast Popup -->
    <div id="toast"
        class="fixed top-5 right-5 w-[300px] bg-red-600 text-lg text-white px-4 py-3 rounded shadow-lg opacity-0 transition-opacity duration-500 z-50">
        Invalid Credentials
    </div>

    <script>
        const invalid = "<%= typeof invalid !== 'undefined' && invalid ? 'true' : 'false' %>";

        if (invalid === "true") {
            showToast();
        }

        function showToast(message = "Invalid Credentials", duration = 3000) {
            const toast = document.getElementById("toast");
            toast.textContent = message;
            toast.classList.remove("opacity-0");
            toast.classList.add("opacity-100");

            setTimeout(() => {
                toast.classList.remove("opacity-100");
                toast.classList.add("opacity-0");
            }, duration);
        }
    </script>

    <!-- Combined Layout -->
    <div
        class="flex flex-col md:flex-row items-center justify-between bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-2xl p-10 md:p-14 max-w-7xl w-full gap-10">

        <!-- Left: Animated Welcome Text -->
        <div class="flex-1 text-center lg:ml-12 md:text-left">
            <h1
                class="text-4xl md:text-5xl font-extrabold mb-6 anim-float bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-pink-400">
                Welcome to Admin Panel
            </h1>

            <!-- GIF Below -->
            <div class="flex justify-center mt-[100px]">
                <img src="https://images.unsplash.com/photo-1509479200622-4503f27f12ef?fm=jpg&q=60&w=3000"
                    alt="Admin GIF" class="w-64 lg:mr-7 md:w-72 rounded-full shadow-lg animate-float" />
            </div>
        </div>

        <!-- Right: Login Box -->
        <div class="bg-gray-800 px-10 pt-10 pb-3 rounded-2xl shadow-xl w-full max-w-md">
            <h2 class="text-3xl font-bold text-white text-center mb-8">Login</h2>

            <form action="/login" method="POST" class="space-y-5">
                <!-- Email -->
                <div>
                    <label for="email" class="block text-gray-300 font-medium mb-1">Email</label>
                    <input type="email" id="email" name="email" required
                        class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-gray-300 font-medium mb-1">Password</label>
                    <input type="password" id="password" name="password" required
                        class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-semibold transition">
                    Login
                </button>
            </form>

            <p class="text-gray-400 text-center mt-8">
                Admin: <span class="text-blue-400 font-bold text-lg">Mostakin Ahmed</span>
            </p>
        </div>
    </div>
</body>

</html>